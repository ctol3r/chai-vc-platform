// Prisma schema for Chai VC Platform with database seeding support
// Defines User, Credential, and Job models for comprehensive GraphQL operations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String
  credentials Credential[]
  jobs        Job[]
}

model Credential {
  id       Int      @id @default(autoincrement())
  name     String
  issuer   String
  issuedAt DateTime @default(now())
  status   CredentialStatus @default(REQUESTED)
  user     User?    @relation(fields: [userId], references: [id])
  userId   Int?
}

model Job {
  id     Int    @id @default(autoincrement())
  title  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

enum CredentialStatus {
  REQUESTED
  VERIFIED
  REVOKED
}

model DidDocument {
  id          Int     @id @default(autoincrement())
  did         String  @unique
  controller  String
  keys        String? // JSON-encoded
  services    String? // JSON-encoded
  deactivated Boolean @default(false)
}
