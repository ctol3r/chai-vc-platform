version: '3.8'
services:
  db:
    image: postgres:13
    restart: always
    environment:
      POSTGRES_DB: chai
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - db-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"

  backend:
    image: node:18
    working_dir: /app
    volumes:
      - ./backend:/app
    command: sh -c 'npm install && npm run dev'
    environment:
      DATABASE_URL: postgres://postgres:postgres@db:5432/chai
    ports:
      - "3000:3000"
    depends_on:
      - db

  ai-matcher-service:
    image: python:3.11
    working_dir: /app
    volumes:
      - ./ai-matcher-service:/app
    command: uvicorn src.routes.match:app --host 0.0.0.0 --port 8000
    ports:
      - "8000:8000"

  frontend:
    image: node:18
    working_dir: /app
    volumes:
      - ./frontend:/app
    command: sh -c 'npm install && npm run dev'
    ports:
      - "3001:3000"
    depends_on:
      - backend

volumes:
  db-data:
