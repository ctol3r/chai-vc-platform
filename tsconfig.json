{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@matcher/*": ["ai-matcher-service/src/*"],
      "@frontend/*": ["frontend/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/src/**/*.ts",
    "backend/__tests__/**/*.ts",
    "ai-matcher-service/src/**/*.ts",
    "frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
